@model IEnumerable<FoodCleanB.Database.DonHang>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/LayoutProfile.cshtml";
}

<h2>Đơn hàng</h2>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="order">
            <div>
                @item.NgayLap.Value.ToString("dd/MM/yyyy HH:mm:ss")
            </div>
            <div class="item-order d-table">
                @foreach (var itemOrder in item.ChiTietDonHangs)
                {
                    <div class="d-table-row">
                        <div class="d-table-cell">
                            @itemOrder.SanPham.TenHang
                        </div>
                        <div class="d-table-cell text-right">
                           x @itemOrder.SoLuong
                        </div>
                    </div>
                }
            </div>
            <div class="shipping-info">
                <div class="ship-adderss">
                    @item.DiaChi
                </div>
                <div class="contact">

                    @item.SDT
                </div>
            </div>
            <div>
                <b>Thành tiền:</b> <span>@item.TongTien.ToString("##,###") đ</span>
            </div>
        </div>
    }
}