@{
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
    ViewBag.Title = "Đăng nhập";
}

<h2 class="active">Đăng nhập</h2>

            <!-- Icon -->
<div class="fadeIn first">
    <img src="https://i.ya-webdesign.com/images/vegetables-icon-png-5.png" id="icon" alt="User Icon" />
</div>

<!-- Login Form -->
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="text" id="login" class="fadeIn second" name="TenDangNhap" placeholder="Tài khoản" required>
    <input type="password" id="password" class="fadeIn third" name="MatKhau" placeholder="Mật khẩu" required>
    <input type="submit" class="fadeIn fourth" value="Đăng nhập">
}