@model FoodCleanB.Database.SanPham

@{
                /**/

                ViewBag.Title = "Admin - ThemSanPham";
                Layout = "~/Views/Shared/LayoutShare.cshtml";
}

<h2>ThemSanPham</h2>

@using (Html.BeginForm("ThemSanPham", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(false)
        @if (ViewBag.NhaCungCap != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.MaNhaCungCap, "MaNhaCungCap", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 col-sm-12">
                    @Html.DropDownListFor(model => model.MaNhaCungCap, ViewBag.NhaCungCap as List<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNhaCungCap, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        @if (ViewBag.NhomHang != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.MaNhomHang, "MaNhomHang", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6 col-sm-12">
                    @Html.DropDownListFor(model  => model.MaNhomHang,
                        (List<SelectListItem>) ViewBag.NhomHang, htmlAttributes: new { @class = "form-control", @required = "" })
                    @Html.ValidationMessageFor(model => model.MaNhomHang, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.TenHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.TenHang, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
                @Html.ValidationMessageFor(model => model.TenHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" }, @required = "" })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaThanh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.GiaThanh, new { htmlAttributes = new { @class = "form-control" }, @required = "", @type = "number" }) đ
                @Html.ValidationMessageFor(model => model.GiaThanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" }, @required = "", @type = "number", @min = "1" })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhoiLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.KhoiLuong, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.2" }, @min = "0.1" }) kg
                @Html.ValidationMessageFor(model => model.KhoiLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TheTich, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.TheTich, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.1" } }) lit
                @Html.ValidationMessageFor(model => model.TheTich, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhuyenMai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.KhuyenMai, new { htmlAttributes = new { @class = "form-control", @type = "number" } }) đ
                @Html.ValidationMessageFor(model => model.KhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhSanPham, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6 col-sm-12">
                @Html.EditorFor(model => model.AnhSanPham, new { htmlAttributes = new { @class = "form-control", @type = "url" } })
                @Html.ValidationMessageFor(model => model.AnhSanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 col-sm-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "SanPham")
</div>