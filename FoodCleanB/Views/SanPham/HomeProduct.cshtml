@model List<FoodCleanB.Database.SanPham>

@if (!Model.Any())
{
    <div class="col-12 text-center pt-3">
        Chưa có sản phẩm
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 special-grid best-seller">
            <div class="products-single fix">
                <div class="box-img-hover">
                    <div class="type-lb">
                        @if (item.KhuyenMai > 0)
                        {
                            <p class="sale">
                                <del>@item.GiaThanh.ToString("##,###") đ</del>
                            </p>
                        }

                    </div>
                    <div class="image-box">
                        <img src="@item.AnhSanPham" class="img-fluid img-responsive img-thumbnail" alt="Image">
                    </div>
                    
                    <div class="mask-icon">
                        <ul>
                            <li>
                                <a href="@Url.Action("Detail", new {ItemId = item.MaHang, Title = item.TenHang.Replace(" ", "-")})" data-toggle="tooltip" data-placement="right" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </li>
                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Lưu lại"><i class="far fa-heart"></i></a></li>
                        </ul>

                        <a class="cart add-card" href="#" data-itemid="@item.MaHang">Thêm vào giỏ</a>
                    </div>
                </div>
                <div class="why-text">
                    <h4><a href="@Url.Action("Detail","SanPham", new {ItemId = item.MaHang, Title = item.TenHang.ToLower().Replace(" ", "-")})" title="View">@item.TenHang</a></h4>

                    <h5 class="price">
                        @Html.Raw((item.GiaThanh - (item.KhuyenMai ?? 0)).ToString("##,###")) đ
                    </h5>
                </div>
            </div>
        </div>
    }

}
